<Window x:Class="FinTrackSustav.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prijava" Height="300" Width="400">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Email:" Margin="5"/>
            <TextBox x:Name="txtEmail" Width="250" Height="30" Margin="5"/>

            <TextBlock Text="Lozinka:" Margin="5"/>
            <PasswordBox x:Name="pwdPassword" Width="250" Height="30" Margin="5"/>

            <Button x:Name="btnLogin" Content="Prijava" Width="150" Height="40" Margin="10"
                    Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
