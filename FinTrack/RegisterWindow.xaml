<Window x:Class="FinTrackSustav.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FinTrackSustav - Registracija" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#FF2196F3">
        <Border Background="White" 
                CornerRadius="10" 
                Padding="20" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Registracija" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <!-- Ime -->
                <TextBlock Text="Ime:" 
                           FontSize="14" 
                           Margin="5,0"/>
                <TextBox x:Name="txtName" 
                         Width="300" 
                         Height="30" 
                         Margin="5" 
                         Padding="5"/>

                <!-- Email -->
                <TextBlock Text="Email:" 
                           FontSize="14" 
                           Margin="5,10,5,0"/>
                <TextBox x:Name="txtEmail" 
                         Width="300" 
                         Height="30" 
                         Margin="5" 
                         Padding="5"/>

                <!-- Lozinka -->
                <TextBlock Text="Lozinka:" 
                           FontSize="14" 
                           Margin="5,10,5,0"/>
                <PasswordBox x:Name="pwdPassword" 
                             Width="300" 
                             Height="30" 
                             Margin="5" 
                             Padding="5"/>

                <!-- Potvrda lozinke -->
                <TextBlock Text="Potvrdi lozinku:" 
                           FontSize="14" 
                           Margin="5,10,5,0"/>
                <PasswordBox x:Name="pwdConfirmPassword" 
                             Width="300" 
                             Height="30" 
                             Margin="5" 
                             Padding="5"/>

                <!-- Gumbi -->
                <Button x:Name="btnRegister" 
                        Content="Registriraj se" 
                        Width="150" 
                        Height="40" 
                        Margin="10" 
                        Background="#FF2196F3" 
                        Foreground="White" 
                        Click="BtnRegister_Click"/>

                <Button x:Name="btnCancel" 
                        Content="Odustani" 
                        Width="150" 
                        Height="40" 
                        Margin="10" 
                        Background="Transparent" 
                        Foreground="#FF2196F3" 
                        BorderBrush="#FF2196F3" 
                        Click="BtnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>