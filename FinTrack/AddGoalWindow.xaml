<Window x:Class="FinTrackSustav.AddGoalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj novi cilj" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Unos naziva cilja -->
        <Label Content="Naziv cilja:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtGoalName" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <!-- Unos ciljanja iznosa -->
        <Label Content="Ciljni iznos:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtTargetAmount" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <!-- Tipka Spremi i Odustani -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Spremi" Width="75" Margin="5" Click="BtnSave_Click"/>
            <Button Content="Odustani" Width="75" Margin="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
